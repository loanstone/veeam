{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/FolderSync/bin/Debug/net8.0/FolderSync.dll",
            "args": ["--syncPeriod", "10", "--sourceFolder", "/path/to/source", "--destFolder", "/path/to/dest", "--log", "/path/to/log.log"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false
        }
    ]
}
